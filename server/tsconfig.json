{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES6"],
    "module": "NodeNext",
    "baseUrl": ".",
    "rootDir": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "#src/*": ["src/*"]
    }
  },
  "include": ["index.ts", "app.ts", "src/**/*"],
  "exclude": ["node_modules", "openapi.json"],
  "lib": ["esnext"],
  "ts-node": {
    "esm": true
  }
}
