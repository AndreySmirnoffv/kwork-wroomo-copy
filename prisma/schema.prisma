generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  uuid String @id @default(uuid())
  email String @unique
  password String @unique
  token String? @unique
  is_email_verified Boolean
  role String? @default("user")
  type String @default("client")
}

model Payment{
  id BigInt @id @default(autoincrement())
  paymentId String @unique
  email String @unique
  value BigInt
  status String
}

model Bike{
  id BigInt @id @default(autoincrement())
  brand String
  model String
  type String
  year Int
  ps Float
  pricePerDay Float
  color String
}

model Car{
  id BigInt @id @default(autoincrement())
  brand String
  model String
  type String
  year Int
  ps Float
  pricePerDay Float
  amountSpace Int
  transmission String
  gearDrive String
}